<div class="container">
	<div class="form-horizontal">

			<!-- Form Name -->
			<legend ><h2 >Editar detalles del estudiante</h2></legend>

			    <%=  form_for @estudiante, :url =>{:action => "update", :id =>@estudiante}  do |f|  %>

			     <% if @estudiante.errors.any? %>
				    <% @estudiante.errors.full_messages.each do |message| %>
				    	<%if message != "User has already been taken" %>
				      		<div class="alert alert-danger" role="alert">
			  					<%= message %>
							</div>
				      	<%end%>	
				    <% end %>
			  	 <% end %>
			  	<div class="form-group">
					<div class="col-md-5">
					  	<label for="name" >Nombre:</label>  
					  	<%= f.text_field :name, :class => "form-control "   %>
					</div>  	
			  	</div>
				<div class="form-group">
					<div class="col-md-5">
					  	<label for="lastname" >Apellido:</label>  
					  	<%= f.text_field :lastname, :class => "form-control " %>
					</div>  	
			    </div>
			    <div class="form-group">
					<div class="col-md-5">
					  	<label for="matricula" >Matricula:</label>  
					  	<%= f.text_field :matricula, :class => "form-control "  %>
					</div>  	
			    </div>
			     <div class="form-group">
					<div class="col-md-5">
					  	<label for="clave" >Clave estudiantil:</label>  
					  	<%= f.text_field :clave, :class => "form-control " %>
					</div>  	
			    </div>
					
				<div class="form-group" >
					<div class="col-md-2">
					  <%= f.submit "Guardar cambios" , class: "btn btn-primary" %>
					</div>  	
			 	</div>

			 <% end %>
			 <%= link_to 'AtrÃ¡s', {:action => 'index'} %>
	</div>		
</div>
