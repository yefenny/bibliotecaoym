<div class="container">
		<div class="page-header">
		        <h1>Roles</h1>
		 </div>
		<% if @rols.blank? %>
			<p>No existe ningún rol en nuestro sistema.</p>
			<p><%= link_to "Añadir nuevo ", {:action => 'new' }%></p>
		<% else %>
			<p>Estos son los roles que se encuentran en nuestro sistema.</p>
		<div class="row">
        <div class="col-md-6">
          <table class="table">
            <thead>
              <tr>
                <th>Roles </th> 
                 <th><%= link_to "Añadir", {:action => 'new'} %></th>
              </tr>
            </thead>
            <tbody>
            <% @rols.each do |c| %>
            <% nombre = "#{c.name} "%>
            <tr>   		
			    <td ><%= link_to nombre, {:action => 'show', :id => c.id} -%></td>
			   	<td> <%= link_to 'Editar', {:action => "edit", :id => c.id} %></td>
             </tr>  
             <% end %>
       
            
            </tbody>
          </table>
      
		<% end %>
	</div>	
	</div>
</div>	
