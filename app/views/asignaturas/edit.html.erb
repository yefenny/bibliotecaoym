			      		<div class="alert alert-danger" role="alert">
		  					<%= message %>
						</div>
			      	<%end%>	
			    <% end %>
		  	 <% end %>
		  	 <div class="form-group">
					<div class="col-md-5">
					  	<strong>ID: </strong> <%= @asignatura.id %><br />
					</div>  	
			  </div>
		  	  <div class="form-group">
					<div class="col-md-5">
					  	<label for="name" >Nombre:</label>  
					  	<%= f.text_field :name , :class => "form-control "  %>
					</div>  	
			  </div>
			  <div class="form-group">
					<div class="col-md-3">
					  	<label for="areasconocimiento_id" >Area de conocimineto:</label>  
					  	<%= f.collection_select(:areasconocimiento_id, @areasconocimiento, :id, :name,{:prompt => "Seleccionar area de conocimiento"}, {:class => "form-control "} ) %>
					</div>  	
			  </div>			 
			 <div class="form-group" >
					<div class="col-md-2">
					  <%= f.submit "Guardar cambios" , class: "btn btn-primary" %>
					</div>  	
			 </div>

				<% end %>
