<div class="container">
	<div class="form-horizontal">
		<legend ><h2>Editar detalles de Asignatura</h2></legend>
	    <%=  form_for @asignatura, :url =>{:action => "update", :id =>@asignatura}  do |f|  %>

		     <% if @asignatura.errors.any? %>
			    <% @asignatura.errors.full_messages.each do |message| %>
